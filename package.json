{
  "name": "rvl-pipe-mongodb",
  "version": "2.2.0",
  "description": "rvl-pipe style wrappers for mongodb",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --coverage",
    "lint": "standard",
    "format": "prettier-standard --format",
    "report": "nyc report --reporter=html"
  },
  "keywords": [
    "pipe",
    "promises",
    "async",
    "mongodb"
  ],
  "files": [
    "build"
  ],
  "repository": "https://github.com/revelatio/rvl-pipe-mongodb",
  "author": "Ernesto Freyre",
  "license": "MIT",
  "peerDependencies": {
    "mongodb": "^3.5.9",
    "rvl-pipe": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/mongodb": "^3.5.20",
    "@types/faker": "^4.1.12",
    "@types/sinon": "^9.0.4",
    "coveralls": "^3.1.0",
    "cuid": "^2.1.8",
    "faker": "^4.1.0",
    "jest": "^26.0.1",
    "mongodb": "^3.5.8",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.11.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "rvl-pipe": "^2.2.1",
    "sinon": "^9.0.2",
    "standard": "^14.3.4",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ]
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "build/"
    ],
    "globals": [
      "test",
      "expect",
      "describe",
      "it",
      "afterEach",
      "afterAll"
    ]
  }
}
